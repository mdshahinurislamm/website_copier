<script>
    function openCloseHam() {
        $(".ham-menu").toggleClass("open");
    };

    $(document).ready(function () {
        $(".menu-row").find("a").click(function () {
            if ($(this).attr("href") == "#") {
                if ($(this).parent().hasClass("active")) {
                    $(this).siblings('ul').slideUp();
                    $(this).closest("ul").find("li").removeClass("active");
                } else {
                    $(this).closest("ul").find("ul").slideUp();
                    $(this).siblings('ul').slideDown();
                    $(this).closest("ul").find("li").removeClass("active");
                    $(this).parent().addClass("active");
                }
            }
        });

        //For Stickey header

        if ($("#secondary-header").length !== 0) {
            window.onscroll = function () {
                myFunction();
            };
            var navbar = document.getElementById("secondary-header");
            var sticky = navbar.offsetTop;

            function myFunction() {
                if (window.pageYOffset >= sticky) {
                    navbar.classList.add("sticky");
                } else {
                    navbar.classList.remove("sticky");
                }
            }
        }

        var decodedCookie = decodeURIComponent(document.cookie);
        var ca = decodedCookie.split(';');
        for (var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') {
                c = c.substring(1);
            }
            if (c == 'startMyOrderHint') {
                $('#firstTimeUser').removeClass('firstTimeUser');
                $('#firstTimeUser').addClass('secondTimeUser');
            }
        }

    });


    function ShowSavedAddress(flag) {
        if (flag) {
            $('#openSavedAddressModal').addClass('open');
        } else {
            $('#openSavedAddressModal').removeClass('open');
        }

    }


    function hbMenuHide(label, category) {

        if (label) {
            try {
                dataLayer.push({
                    'event': 'menu_navigation',
                    'eventCategory': category,
                    'eventAction': 'Click',
                    'eventLabel': label
                });
            }
            catch (err) {
            }
        }
        $('.onlyMobile_menu').removeClass("right-0");
        $(".mobileMenu_overLay").addClass("d-none");
        $("body").removeClass("hamMenuOpen");
    }
</script>


<script>
    function hbMenuClick() {
        $('.onlyMobile_menu').addClass("right-0");
        $(".mobileMenu_overLay").removeClass("d-none");
        $("body").addClass("hamMenuOpen");
    }

    function hbMenuRemove() {
        $('.onlyMobile_menu').removeClass("right-0");
        $(".mobileMenu_overLay").addClass("d-none");
        $("body").addClass("hamMenuOpen");
    }
</script>




